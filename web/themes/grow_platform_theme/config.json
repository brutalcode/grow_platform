{
  "name": "grow_platform_theme",
  "description": "A theme based on Radix.",
  "proxy" : "http://drupal.dev",
  "bowerDir": "./bower_components",
  "css": {
    "file" : "grow_platform_theme.style.scss",
    "src": [
      "assets/scss/**/*.scss"
    ],
    "dest": "assets/css",
    "includePaths": [
      "./bower_components/bootstrap-sass/assets/stylesheets",
      "./bower_components/font-awesome/scss",
      "../radix/scss"
    ]
  },
  "js": {
    "file" : "grow_platform_theme.script.js",
    "src": [
      "assets/js/**/*.js"
    ]
  },
  "images": {
    "src": [
      "assets/images/**/*"
    ],
    "dest": "assets/images/"
  },
  "fonts": {
    "src": [
      "./bower_components/font-awesome/fonts/**.*"
    ],
    "dest": "./assets/fonts/"
  }
}
